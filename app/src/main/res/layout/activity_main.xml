<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- City input field -->
    <EditText
        android:id="@+id/city_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter city"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Search button -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="8dp" />

    <!-- Current weather details -->
    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="32sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather description" />

    <TextView
        android:id="@+id/feels_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feels like" />

    <TextView
        android:id="@+id/humidity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity" />

    <TextView
        android:id="@+id/wind_speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind speed" />

    <TextView
        android:id="@+id/sunrise_sunset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise / Sunset" />

    <!-- Hourly forecast label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hourly Forecast"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <!-- RecyclerView for hourly forecast -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hourly_forecast_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" />

    <!-- Weekly forecast label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Forecast"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <!-- RecyclerView for weekly forecast -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weekly_forecast_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical" />

</LinearLayout>
